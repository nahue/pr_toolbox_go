package templates

templ IndexPage() {
	@BaseLayout(PageData{
		Title:       "People Management",
		Description: "People Management System",
		Content:     IndexContent(),
	})
}

templ IndexContent() {
	<div class="max-w-6xl mx-auto bg-white rounded-xl shadow-2xl overflow-hidden">
		<div class="bg-gradient-to-br from-primary-500 to-purple-600 text-white p-8 text-center">
			<h1 class="m-0 text-4xl font-light">People Management System</h1>
		</div>
		<div class="p-8">
			<!-- Navigation -->
			<div class="mb-6">
				<a href="/pr_descriptions" class="text-primary-500 hover:text-primary-600 font-medium">📝 PR Descriptions →</a>
			</div>
			<div class="mb-8 flex gap-4 items-center flex-wrap">
				<a href="/api/people" x-target="people-data" class="px-6 py-3 border-none rounded-lg cursor-pointer text-sm font-medium transition-all duration-300 bg-primary-500 text-white hover:bg-primary-600 hover:-translate-y-0.5 no-underline inline-block">
					Load People
				</a>
				<a href="/health" x-target="health-status" class="px-6 py-3 border-none rounded-lg cursor-pointer text-sm font-medium transition-all duration-300 bg-gray-600 text-white hover:bg-gray-700 hover:-translate-y-0.5 no-underline inline-block">
					Check Health
				</a>
				<div id="health-status" class="px-4 py-2.5 rounded-lg font-medium" x-show="$el.innerHTML.trim() !== ''" x-html="$el.innerHTML"></div>
			</div>
			<div id="health-status"></div>
			<div id="people-data">
				<!-- People data will be loaded here via Alpine AJAX -->
			</div>
		</div>
	</div>
}
